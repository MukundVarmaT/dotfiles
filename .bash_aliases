alias rm="rm -iv"
alias mkdir="mkdir -p"
alias apt-get="sudo apt-get"
alias vim="nvim"
alias ..="cd .."
alias ....="cd ...."
alias rmdir="rm -rf"
alias ls="ls -aFh --color=always"
alias mktar="tar -cvf"
alias mkzip="zip -rv"
alias cat="bat"
alias pip-install="pip3 install --user"
alias apt-install="sudo apt-get install"
alias send="wormhole send"
alias receive="wormhole receive"
alias mkcd="_(){ mkdir -p $1; cd $1; }; _"
alias find="find . -name $1"
alias gstatus="git status -sb"
alias gadd="git add"
alias gcommit="git commit -m"
alias gfetch="git fetch"
alias gmerge="git merge"
alias gpush="git push"
alias gdiff="git diff --color-words"
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias nvidia-reinstall="sudo bash ~/dotfiles/misc/nvidia.run && echo 'Please restart system to reflect changes!'"
alias network-reinstall="cd ~/dotfiles/misc/network-adapter/ && sudo bash autorun.sh && cd "
alias gpustat="watch nvidia-smi"
alias cpustat="htop"
alias update="sudo apt-get update"
alias upgrade="sudo apt-get upgrade"
alias aws-connect="bash ~/dotfiles/aws-connect.sh "
alias aws-send="bash ~/dotfiles/aws-send.sh "
alias iitm-vpn="cd ~/dotfiles/misc/iitm-vpn/ && bash fortisslvpn.sh"
